# ============================================================================
# Cache Configuration (Performance Optimization)
# ============================================================================

# Session & JWT Cache (STRONGLY RECOMMENDED)
# Caches TradingView session lookups and JWT tokens
# Impact: Saves 400-1000ms per request (KV + TradingView API)
# TTL: 5 minutes
# Risk: Low (credentials rarely change within 5 minutes)
ENABLE_SESSION_JWT_CACHE=true

# Chart Data Cache (OPTIONAL - Use with caution)
# Caches entire chart data responses
# Impact: Saves 2-3 seconds for repeated requests
# TTL: Configurable via CHART_DATA_CACHE_TTL (default 5 minutes)
# Risk: Medium (price data may be stale)
# Note: CVD failures are NOT cached (only successful CVD fetches with data)
# ENABLE_CHART_DATA_CACHE=false

# CVD Config Cache (STRONGLY RECOMMENDED - Enabled by default)
# Caches CVD Pine script configuration (17KB encrypted script)
# Impact: Saves 550-780ms per CVD request
# TTL: 24 hours (in Vercel KV)
# Risk: Very Low (Pine script is static, rarely changes)
# Default: Enabled (only disable if TradingView updates CVD)
# To disable: ENABLE_CVD_CONFIG_CACHE=false
# ENABLE_CVD_CONFIG_CACHE=true

# Chart Data Cache TTL (seconds)
# Only applies if ENABLE_CHART_DATA_CACHE=true
# Default: 300 (5 minutes)
# CHART_DATA_CACHE_TTL=300

# Legacy server-side caching (DEPRECATED - Use granular cache controls above)
# ENABLE_SERVER_CACHE=true

# Enable client-side SWR caching (DISABLED by default - set to 'true' to enable)
# NEXT_PUBLIC_ENABLE_CLIENT_CACHE=true

# Enable detailed performance logging for chart data API (LOCAL DEVELOPMENT ONLY)
# DEBUG_CHART_DATA=true
