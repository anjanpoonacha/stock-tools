{
	"manifest_version": 3,
	"name": "MIO Session Extractor",
	"version": "1.0.0",
	"description": "Automatically extract MarketInOut session cookies for your trading tools",
	"permissions": [
		"cookies",
		"activeTab",
		"storage"
	],
	"host_permissions": [
		"https://www.marketinout.com/*",
		"http://localhost:3000/*",
		"https://*.vercel.app/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.marketinout.com/*"
			],
			"js": [
				"content-script.js"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "MIO Session Extractor"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.svg",
		"48": "icons/icon48.svg",
		"128": "icons/icon128.svg"
	}
}