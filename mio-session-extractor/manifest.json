{
	"manifest_version": 3,
	"name": "MIO Session Extractor",
	"version": "2.0.0",
	"description": "Performance-optimized MarketInOut session extractor with adaptive polling and advanced caching",
	"permissions": [
		"cookies",
		"activeTab",
		"storage",
		"idle",
		"tabs"
	],
	"host_permissions": [
		"https://www.marketinout.com/*",
		"http://localhost:3000/*",
		"http://localhost:3001/*",
		"https://*.vercel.app/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.marketinout.com/*"
			],
			"js": [
				"content-script.js"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "MIO Session Extractor (Performance Optimized)"
	},
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"performance-worker.js"
			],
			"matches": [
				"https://www.marketinout.com/*"
			]
		}
	],
	"icons": {
		"16": "icons/icon16.svg",
		"48": "icons/icon48.svg",
		"128": "icons/icon128.svg"
	}
}