{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:monorepos",
    "group:definitelyTyped",
    "schedule:weekly",
    "security:minimumReleaseAgeNpm"
  ],
  "timezone": "Asia/Kolkata",
  "schedule": ["before 9am on Monday"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitScope": "deps",
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Dependency Updates Dashboard",
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": false,
  "rebaseWhen": "auto",
  "recreateWhen": "always",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "prCreation": "immediate",
  "packageRules": [
    {
      "description": "Group all patch updates together (non-major)",
      "groupName": "All patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "labels": ["dependencies", "patch-update"]
    },
    {
      "description": "Group all minor updates together (non-major)",
      "groupName": "All minor updates",
      "matchUpdateTypes": ["minor"],
      "automerge": false,
      "labels": ["dependencies", "minor-update"]
    },
    {
      "description": "Group all major updates together",
      "groupName": "All major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update", "high-priority"]
    },
    {
      "description": "Critical packages - extra stability period",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "typescript",
        "@vercel/kv",
        "zod"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Security vulnerabilities - immediate high priority",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "prPriority": 10,
      "labels": ["dependencies", "security"]
    },
    {
      "description": "GitHub Actions - auto-update workflow actions",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Monorepo packages - keep grouped by monorepo",
      "extends": ["group:monorepos"],
      "labels": ["dependencies", "monorepo"]
    }
  ]
}
